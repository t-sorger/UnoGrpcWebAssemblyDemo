<Page
    x:Class="UnoBlazorApp1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UnoBlazorApp1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"    
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Spacing="20" Margin="30">
        <TextBlock Text="Press button to increment counter!" FontSize="30" />

        <TextBlock x:Name="CounterValue" FontSize="20">0</TextBlock>
        <Button x:Name="Button" Content="Increment" Click="Increment_Click" />
    </StackPanel>
</Page>
